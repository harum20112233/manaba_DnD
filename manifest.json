{
  "manifest_version": 3,
  "name": "Manaba DnD File Uploader",
  "version": "1.0",
  "description": "Enable drag and drop file upload functionality for manaba submission pages",
  "host_permissions": [
    "https://manaba.lms.tokushima-u.ac.jp/ct/course_*_report_*"
  ],
  "content_scripts": [
    {
      "matches": ["https://manaba.lms.tokushima-u.ac.jp/ct/course_*_report_*"],
      "js": ["content-script.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
